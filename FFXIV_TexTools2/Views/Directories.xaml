<Window x:Class="FFXIV_TexTools2.Views.DirectoriesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFXIV_TexTools2.Views"
        mc:Ignorable="d"
        Title="Directories" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" Height="210" Width="400" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="0" Height="23" Margin="10,15,10,5" VerticalAlignment="Top">
            <TextBox x:Name="FFXIVDir" TextWrapping="Wrap" IsReadOnly="True" Margin="0"/>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1" Height="23" Margin="10,15,10,5" VerticalAlignment="Top">
            <TextBox x:Name="saveDir" TextWrapping="Wrap" IsReadOnly="True" Margin="0"/>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="2" Height="23" Margin="10,15,10,5" VerticalAlignment="Top">
            <TextBox x:Name="modListDir" TextWrapping="Wrap" IsReadOnly="True" Margin="0"/>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="3" Height="23" Margin="10,15,10,5" VerticalAlignment="Top">
            <TextBox x:Name="indexBackupsDir" TextWrapping="Wrap" IsReadOnly="True" Margin="0"/>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="4" Height="23" Margin="10,15,10,5" VerticalAlignment="Top">
            <TextBox x:Name="ModPackDir" TextWrapping="Wrap" IsReadOnly="True" Margin="0"/>
        </Grid>

        <Button Content="..." Grid.Row="0" Grid.Column="1" Margin="5" Click="FFXIVDirButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="25" MinHeight="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
        <Button Content="..." Grid.Row="1" Grid.Column="1" Margin="5" Click="SaveDirButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="25" MinHeight="25" VerticalContentAlignment="Top" HorizontalContentAlignment="Center"/>
        <Button Content="..." Grid.Row="2" Grid.Column="1" Margin="5" Click="modlistDirButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="25" MinHeight="25" VerticalContentAlignment="Top" HorizontalContentAlignment="Center"/>
        <Button Content="..." Grid.Row="3" Grid.Column="1" Margin="5" Click="indexbackupDirButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="25" MinHeight="25" VerticalContentAlignment="Top" HorizontalContentAlignment="Center"/>
        <Button Content="..." Grid.Row="4" Grid.Column="1" Margin="5" Click="ModPackButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="25" MinHeight="25" VerticalContentAlignment="Top" HorizontalContentAlignment="Center"/>
        
        <Label Grid.Row="0" Content="FFXIV Directory" VerticalAlignment="Top"  Height="15" Padding="0" Margin="5,0,0,0"/>
        <Label Grid.Row="1"  Content="Save Directory" VerticalAlignment="Top" Height="15" Padding="0" Margin="5,0,0,0"/>
        <Label Grid.Row="2"  Content="Modlist Directory" VerticalAlignment="Top" Height="15" Padding="0" Margin="5,0,0,0"/>
        <Label Grid.Row="3"  Content="Index Backups Directory" VerticalAlignment="Top" Height="15" Padding="0" Margin="5,0,0,0"/>
        <Label Grid.Row="4"  Content="ModPack Directory" VerticalAlignment="Top" Height="15" Padding="0" Margin="5,0,0,0"/>
    </Grid>
</Window>
